{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "paths": {
            "@bigbangjs/file-storage": [
                "./packages/core/src"
            ],
            "@bigbangjs/file-storage-filesystem": [
                "./packages/filesystem/src"
            ],
            "@bigbangjs/file-storage-s3": [
                "./packages/s3/src"
            ],
            "@bigbangjs/file-storage-gcs": [
                "./packages/gcs/src"
            ]
        }
    },
    "exclude": [
        "**node_modules**",
        "**dist**",
        "**/*.js",
        "**/*spec.ts"
    ]
}